<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SelfCheckQuestionCompleteFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarSelfCheckComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressSelfCheckComplete"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="16dp"
            android:max="18"
            android:progress="18"
            app:indicatorColor="@color/main_blue"
            app:trackColor="@color/sky_blue"
            app:trackCornerRadius="5dp" />

        <TextView
            android:id="@+id/textViewSelfCheckCompleteWaiting1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="잠시만 기다려주세요 :)"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSelfCheckCompleteWaiting2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="알려주신 답변을 토대로 결과를 준비중이에요."
            android:textAlignment="center"
            android:textColor="#FF9F9F9F"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/text_background"
            android:backgroundTint="@color/sky_blue"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSelfCheckCompleteTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오늘의 스크랩"
                    android:textAlignment="center"
                    android:textColor="@color/main_blue"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewSelfCheckCompleteSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="“치료 미루면 따돌림 등 ‘2차 합병증’ 발생”"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewSelfCheckCompleteContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="“ADHD를 치료받지 않고 방치한 아동의 20% ~ 50%는 청소년기, 성인기를 거치며 여러 품행 상의 문제를  보인다. 우선 학업이나 직업상 문제를 초래해 교육과정을 완수할 확률이 낮아지고 지능 수준에 비해 학업 성취도가 떨어지며 단순 노무직에 종사할 가능성이 높다.”"
                    android:textAlignment="center"
                    android:textColor="#FF7B7B7B"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewSelfCheckCompleteCopy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="출처 : 헬스경향"
                    android:textAlignment="viewEnd"
                    android:textColor="#FF7B7B7B"
                    android:textSize="10sp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>